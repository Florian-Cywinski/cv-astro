---
import "../styles/tailwind.css";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import hello from "../assets/img/hello.png";
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>My Cool Resume</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=MuseoModerno:ital,wght@0,100..900;1,100..900&display=swap"
            rel="stylesheet"
        />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
            rel="stylesheet"
        />
    </head>
    <!-- <body class="grid min-h-screen place-items-center bg-gray-400"> -->
    <body
        class="grid min-h-screen place-items-center bg-gray-400 print:min-h-0"
    >
        <!-- <main
            class="m-4 h-[297mm] w-[210mm] overflow-hidden rounded-md bg-white p-8 shadow-lg"
        > -->
        <main
            class="m-4 h-[297mm] w-[210mm] overflow-hidden rounded-md bg-white shadow-lg print:m-0 print:h-screen print:w-screen print:rounded-none print:shadow-none"
        >
            <header class="flex items-center justify-center h-[25mm] w-[210mm]">
                <!-- To center the heading div -->
                <!-- bg-gray-700 -->
                <!-- Flex Container For Nav Items -->
                <div class="flex items-center w-[80mm] justify-center">
                    <!-- To center the heading-text div -->
                    <div class="flex flex-col items-center w-[50mm]">
                        <!-- <div class="flex flex-col items-left w-[50mm]"></div> -->
                        <!-- To have the text left aligned -->
                        <h1 class="roboto-bold header-font-color text-xl">
                            Max Mustermann
                        </h1>
                        <h2 class="roboto-medium header-font-color">
                            Lebenslauf
                        </h2>
                    </div>
                </div>
            </header>
            <div class="grid grid-cols-25/75 h-[272mm]">
                <!-- First Column (20% width) -->
                <div class="flex flex-col items-center left-panel-bg-color">
                    <!-- Left grid cloumn -->
                    <!-- Left panel container -->
                    <!-- Content -->
                    <!-- <Icon name="javascript" size={100} /> -->
                    <!-- <img src="../" alt="Profile image" /> -->
                    <Image
                        src={hello}
                        alt="Profile picture"
                        class="profile-picture"
                    />
                    <div
                        class="flex flex-col items-center h-[140mm] left-panel-text-container"
                    >
                        <!-- Text container -->

                        <p class="text-xs mt-6">Geburtstag</p>
                        <p class="text-sm">12.02.1982 in Berlin</p>
                        <!-- <hr
                        class="w-40 h-1 mx-auto my-4 bg-gray-200 border-0 rounded"
                        /> -->
                        <hr
                            class="w-40 h-1 mx-auto my-4 horizontal-line-color border-0 rounded"
                        />
                        <p class="text-xs">Adresse</p>
                        <p class="text-sm">Berliner Stra√üe 1</p>
                        <p class="text-sm">12345 Berlin</p>
                        <hr
                            class="w-40 h-1 mx-auto my-4 horizontal-line-color border-0 rounded"
                        />
                        <p class="text-xs">Telefon</p>
                        <p class="text-sm">+49 173 65 65 65 65</p>
                        <hr
                            class="w-40 h-1 mx-auto my-4 horizontal-line-color border-0 rounded"
                        />
                        <p class="text-xs">E-Mail</p>
                        <p class="text-sm">max-mustermann@mail.de</p>
                        <!-- <p class="text-sm">@mail.com</p> -->
                    </div>
                </div>

                <!-- Second Column (80% width) -->
                <div class="bg-white">
                    <!-- Content -->
                </div>
            </div>
        </main>
    </body>
</html>
